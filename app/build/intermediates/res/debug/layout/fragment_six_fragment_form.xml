<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:fbutton="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="5dp"
             tools:context="fragment.SixFragmentForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinnerSurveyor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_alignLabels="false"
            app:ms_arrowColor="#0000FF"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/primary_pressed"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="#000000"
            app:ms_floatingLabelText="Surveyor Name"
            app:ms_highlightColor="@color/ripple"
            app:ms_hint="Surveyor Name"
            app:ms_multiline="false"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Remarks"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="4"
            android:scrollHorizontally="true"
            app:met_baseColor="@color/primary_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primary"
            app:ms_errorColor="@color/error_color"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/imageViewCaptureImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:minHeight="60dp"
                android:minWidth="40dp"
                android:src="@drawable/ic_camera_alt_black_48dp"
                android:text="Category"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewCaptureImage"
                android:layout_centerHorizontal="true"
                android:text="Capture Image"/>
        </RelativeLayout>


        <info.hoang8f.widget.FButton

            android:id="@+id/buttonSubmitData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="150dp"
            android:text="Submit"
            android:textColor="@color/primary_text"
            fbutton:buttonColor="@color/accent"
            fbutton:cornerRadius="5dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"

            />

    </LinearLayout>

</FrameLayout>
