<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="fragment.ThirdFragmentForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinnerStageOfConstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_alignLabels="false"
            app:ms_arrowColor="#0000FF"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/primary_pressed"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="#000000"
            app:ms_floatingLabelText="Stage of Construction"
            app:ms_highlightColor="@color/ripple"
            app:ms_hint="Stage of Construction"
            app:ms_multiline="false"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinnerWhenConstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_alignLabels="false"

            app:ms_arrowColor="#0000FF"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/primary_pressed"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="#000000"
            app:ms_floatingLabelText="When was construction started?"
            app:ms_highlightColor="@color/ripple"
            app:ms_hint="When was construction started?"
            app:ms_multiline="false"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinnerDetailsConstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_alignLabels="false"
            app:ms_arrowColor="#0000FF"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/primary_pressed"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="#000000"
            app:ms_floatingLabelText="Details Of Construction"
            app:ms_highlightColor="@color/ripple"
            app:ms_hint="Details Of Construction"
            app:ms_multiline="false"/>

        <!--  <TextView
              android:layout_width="match_parent"
