        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextslabsDecreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:hint=" No. of Slabs "
            android:inputType="number"
            android:lines="1"
            android:maxLength="2"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:met_baseColor="@color/primary_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primary"
            app:ms_errorColor="@color/error_color"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextNoOfRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:hint=" No. of Rooms "
            android:inputType="number"
            android:lines="1"
            android:maxLength="2"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:met_baseColor="@color/primary_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primary"
            app:ms_errorColor="@color/error_color"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextNoOfBathroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:hint=" No. of Bathroom "
            android:inputType="number"
            android:lines="1"
            android:maxLength="2"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:met_baseColor="@color/primary_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primary"
            app:ms_errorColor="@color/error_color"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextNoOfKitchen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:hint=" No. of Kitchen "
            android:inputType="number"
            android:lines="1"
            android:maxLength="2"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:met_baseColor="@color/primary_text"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primary"
            app:ms_errorColor="@color/error_color"
            />
    </LinearLayout>
